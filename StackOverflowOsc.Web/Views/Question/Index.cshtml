@model System.Collections.Generic.IEnumerable<StackOverflowOsc.Web.Models.QuestionListModel>

@{
    ViewBag.Title = "Questions";
}

<head>
    <title>Index</title>
    <style>
        .row {
            width: 100%;
            text-align: center;
        }

        .block {
            width: 50px;
            display: inline-block;
            text-align: center;
            cursor: pointer;
        }
    </style>
</head>

<p>
    @Html.ActionLink("Ask Question", "AskQuestion")
</p>

<div>
    <h2 style="display: inline-block">Top Questions</h2>
    <button onclick="window.location.href='/Question/AskQuestion/'" style="display: inline-block; margin-left: 50%" type="button" class="btn btn-warning">Ask Question</button>
</div>
<br />
<hr/>

