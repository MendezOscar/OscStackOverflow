@model System.Collections.Generic.IEnumerable<StackOverflowOsc.Web.Models.AnswerListModel>

@{
    ViewBag.Title = "Answers";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Back", "Index", "Question")
</p>
<table class="table">
    <tr>
        @*<th>
