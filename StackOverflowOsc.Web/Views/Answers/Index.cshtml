@foreach (var item in Model) {
    <td>
        @using (Html.BeginForm("IsCorrect", "Answers", item))
        {
            if (item.Good)
            {
                <button type="button" class="btn btn-success">Correct</button>
            }
            else
            {
                <button class="btn btn-default" type="submit">Correct</button>
            }
        }

    </td>
     <td>
            @Html.ActionLink("+", "Vote", "Answers", new {answerId = item.AnswerId}, new {@class = "link-button"}) |

            @Html.DisplayFor(modelItem => item.Votes)
